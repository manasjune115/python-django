<script>
function opensection(no){

	emailwindow= dhtmlmodal.open('EmailBox', 'iframe', 'chapter_section/'+no  , 'Section Detail', 'width=700px,height=450px,center=1,resize=0,scrolling=1')

} 
function openact(no){

	emailwindow= dhtmlmodal.open('EmailBox', 'iframe', 'showact/'+no  , 'Act Detail', 'width=700px,height=450px,center=1,resize=0,scrolling=1')

} 
function openhistory(no){

	emailwindow= dhtmlmodal.open('EmailBox', 'iframe', 'chapter_history/'+no  , 'History Detail', 'width=700px,height=450px,center=1,resize=0,scrolling=1')

} 

</script>

